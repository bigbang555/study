<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
			 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fs.dao.tyContentDao">
	<select id="selectAllContent" resultType="com.fs.po.tyContent">
		select* from content limit #{firstIndex}, #{pageSize}
	</select>
	<select id="countSize" resultType="java.lang.Integer">
		select count(id) as num from content
	</select>
	<delete id="deleteContentById">
		delete from content where id =#{id}
	</delete>	
	<insert id="insertContent">
		insert into content (name,kind_id) values (#{name},#{kind_id})		
	</insert>
	<update id="updateContent">
		update content set name=#{name},kind_id=#{kind_id} where id=#{id}
	</update>
	<delete id="deleteBatch2" parameterType="java.util.List">
        delete from content where id in(
        <foreach collection="list" item="item" separator=",">
            #{item}
        </foreach>
        )
    </delete>  
    <select id="selectContent" resultType="com.fs.po.tyContent">
        select* from content where 1=1

        <if test="id!=0">and id=#{id}</if>
        <if test="name!=null and !name.trim().equals(&quot;&quot;)">and name 

 like concat('%',#{name},'%') </if>
        
    </select>

	
</mapper>


















